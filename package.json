{
	"name": "vscode-kdb-q",
	"displayName": "vscode-kdb-q",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:q",
		"onCommand:vscode-kdb-q.connectToServer",
		"onCommand:vscode-kdb-q.runSelectionQuery",
		"onView:vscode-kdb-q-explorer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-kdb-q.connectToServer",
				"title": "kdb-q: Connect to kdb+ server"
			},
			{
				"command": "vscode-kdb-q.runSelectionQuery",
				"title": "kdb-q: Run selection as query"
			}
		],
		"languages": [
			{
				"id": "q",
				"aliases": [
					"q",
					"q"
				],
				"extensions": [
					".q",
					".k"
				],
				"configuration": "./grammars/vscode-kdb-q-config.json"
			}
		],
		"grammars": [
			{
				"language": "q",
				"scopeName": "source.q",
				"path": "./grammars/vscode-kdb-q.json"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "vscode-kdb-q-explorer",
					"name": "kdb+ explorer",
					"icon": "media/dep.svg"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@types/long": "^4.0.1",
		"long": "^4.0.0",
		"node-q": "^2.5.0"
	}
}
